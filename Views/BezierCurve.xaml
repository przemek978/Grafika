<Window x:Class="Grafika.Views.BezierCurve"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Grafika.Views"
        mc:Ignorable="d"
        Title="BezierCurve" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Canvas Grid.Column="0" Name="canvas" Background="White"/>
        <StackPanel Grid.Column="1">
            <TextBox Name="degreeTextBox"  Text="2"/>
            <Button Content="Draw Bezier Curve" Click="DrawBezierCurveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
